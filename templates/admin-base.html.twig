                    <a class="nav-link" href="{{ path('admin-trick-list') }}">
                        <div class="sb-nav-link-icon"><i class="fas fa-list-alt"></i></div>
                        Liste</a>
                    <a class="nav-link" href="{{ path('admin-trick-add') }}">
                        <div class="sb-nav-link-icon"><i class="fas fa-edit"></i></div>
                        Ajouter</a>
                </div>
            </div>
            <div class="sb-sidenav-footer">
                <div class="small">Connect√© en tant que: {{ app.user.getUsername }}</div>
            </div>
        </nav>
    </div>
    <div id="layoutSidenav_content">
        <main>
            {% block main %}

            {% endblock %}
        </main>
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Snowtricks | Sp4tz {{ "now"|date("Y") }}</div>
                </div>
            </div>
        </footer>
    </div>
</div>
<script src="{{ absolute_url( asset('/vendor/jquery/jquery.min.js')) }}"></script>
