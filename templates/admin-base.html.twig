            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <span class="m-3">{{ app.user.getFirstname ~ ' ' ~ app.user.getLastname  }}</span>
                <div class="dropdown-divider"></div>
