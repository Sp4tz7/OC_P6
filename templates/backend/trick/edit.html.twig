{% extends 'admin-base.html.twig' %}

{% block title %}Edit trick {{ parent() }}{% endblock %}

{% block main %}
    <div class="container-fluid">
        <h1 class="mt-4">Modification du trick</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('admin') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item active">{{ trick.getName }}</li>
        </ol>
        <div class="row">
            <div class="col-lg-12 col-xs-12 col-sm-12">
                <div class="card " style="width: 100%">
                    <div class="card-header">
                        <h4 class="float-left">DÃ©tails du trick</h4>
